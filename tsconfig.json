{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "strictFunctionTypes": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
